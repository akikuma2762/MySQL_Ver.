                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    <div class="form-group">
                                        <%--<asp:TextBox ID="TextBox_dayval" runat="server" class="form-control" Text="180" placeholder="請輸入期限(數字)"></asp:TextBox>--%>
                                        <div class="input-group">
                                            <input type="text" class="form-control" value="180" id="TextBox_dayval" name="TextBox_dayval" placeholder="請輸入天數" runat="server" />

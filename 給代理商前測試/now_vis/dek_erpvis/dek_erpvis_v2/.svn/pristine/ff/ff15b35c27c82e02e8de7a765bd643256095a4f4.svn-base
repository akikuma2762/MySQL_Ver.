    <script src="../../assets/vendors/pdfmake/build/vfs_fonts.js"></script>
    <script>
        $("form input:checkbox").addClass('flat');
        $("#btncheck").click(function () {
            var selectedValues = [];
            // 2019/07/03，有被勾選的存放儲位
            $("[id*=CheckBoxList_spaces] input:checked").each(function () {
                selectedValues.push($(this).val());
            });
            if (selectedValues.length == 0) {
                var remind = document.getElementById("cbx_remind");
                remind.innerHTML = "至少選一項 ! !";
                remind.style.color = "#FF3333";
            } else {
                var day_var = document.getElementById("ContentPlaceHolder1_TextBox_dayval").value;
                if (day_var != "") {
                    var re = /^[0-9]+$/;
                    if (!re.test(day_var)) {
                        var remind = document.getElementById("cbx_remind_day");
                        remind.innerHTML = "只能輸入數字 !";
                        remind.style.color = "#FF3333";
                    } else {
                        document.getElementById('<%=button_select.ClientID %>').click();
                    }

                } else {
                    var remind = document.getElementById("cbx_remind_day");
                    remind.innerHTML = "期限不得為空";
                    remind.style.color = "#FF3333";
                }
            }
        });
        // 以下目前未使用
        if ($("#per").text() == 'Y') {
            document.getElementById("block").innerHTML = '<div class="row top_tiles" style="margin: 10px 0;"><div class="col-md-3 tile"><span><br>總呆滯金額</br></span><h2>$ ' + toCurrency($("#tal").text()) + '</h2><span class="sparkline_two" style="height: 160px;"><span></div></div>';
        }
        function toCurrency(num) {
            var parts = num.toString().split('.');
            parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ',');
            return parts.join('.');
        }

    </script>
</asp:Content>
